<!DOCTYPE html>
<html lang="en">
<head>
    <%~ include("../components/head.eta", {}) %>
    <%~ include("../components/table.css") %>
    <style>
        .horizontal{
            display: flex;
        }

        .verbTense{
            display: flex;
            justify-content: space-around;
        }

        h1, h2, h3{
            text-align: center;
        }

        h2{
            margin: 35px 0 15px 0;
            text-decoration: underline;
        }

        caption{
            font-size: 15px;
            text-decoration: none;
        }

        .divider{
            border-bottom: 1px solid black;
        }

        #contents{
            max-width: 1000px;
            margin: 0 auto;
        }

        @media screen and (max-width: 1000px){
            body header h1{
                font-size: 25px;
            }

            .verbTense{
                flex-direction: column;
                align-items: center;
            }
        }

        @media screen and (max-width: 500px){
            h1{
                font-size: 25px;
            }

            td{
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <%~ include("../components/header.eta", {title: `Слово: використовувати`}) %>

    <div id="main">
        <%~ include ("../components/menu.eta") %>

        <div id="contents">
            <%~ include(`./${it.word}`) %>
        </div>
    </div>

    <%- include("../components/footer.eta") %>
</body>
</html>
